          }
        },
        {
          "name": "Create Service (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Radiology\",\n  \"description\": \"Advanced imaging services\",\n  \"keyServices\": [\"X-Ray\", \"MRI\", \"CT Scan\"],\n  \"iconName\": \"LocalHospitalOutlined\"\n}"
            },
            "url": {"raw": "http://localhost:5000/api/services"}
          }
        },
        {
          "name": "Update Service (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
